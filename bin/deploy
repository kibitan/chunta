#!/bin/bash
set -eu -o pipefail
ask() {
  printf "$* [y/n] "
  local answer
  read answer

  case $answer in
    "yes" ) return 0 ;;
    "y" )   return 0 ;;
    * )     return 1 ;;
  esac
}

dir="$(cd "$(dirname "${BASH_SOURCE:-${(%):-%N}}")"; pwd)"
cd $dir/..

if ask "es6 compile?"; then
  bin/bebel
  git status
  if ask "git commit scripts/*.js?"; then
    git add scripts/*.js
    git commit -m 'compile es6'
  fi
fi

if ask "git push?"; then
  git push
fi

ask "deploy?"

set -vx

scp .envrc family:/var/www/chunta/
ssh family <<-EOS
  cd /var/www/chunta
  git pull
  crontab < .crontab
  bin/chunta restart
EOS
